<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECA44E"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football League"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#A10F2F"
            android:padding="10dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center_vertical"
       >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_gravity="center_horizontal"
           android:padding="5dp"
           >
           <TextView
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team1"
               android:padding="5dp"
                 android:textSize="40sp"
               android:textStyle="bold"
               />

           <TextView
               android:textStyle="bold"
               android:layout_gravity="center_horizontal"
               android:id="@+id/team1_score"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
                 android:textSize="40sp"
               android:text="0" />

           <Button
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/goal1"
               android:text="Goal"
               android:onClick="score_goal1"
               android:background="#DC4F08"
               android:padding="5dp"
               />
           <TextView
               android:textStyle="bold"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/team1_foual"
               android:text="0"
                 android:textSize="40sp"
               android:padding="5dp"
               />
           <Button
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/foual2"
               android:text="Foual+"
               android:onClick="freekick1"
               android:background="#DC4F08"
               android:padding="5dp"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:padding="5dp"
           >
           <TextView
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Team2"
               android:padding="5dp"
                 android:textSize="40sp"
               android:textStyle="bold"
               />

           <TextView
               android:layout_gravity="center_horizontal"
               android:id="@+id/team2_score"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
                 android:textSize="40sp"
               android:textStyle="bold"
               android:text="0" />

           <Button
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/goal2"
               android:text="Goal"
               android:onClick="score_goal2"
               android:background="#DC4F08"
               android:padding="5dp"
               />
           <TextView
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/team2_foual"
               android:text="0"
               android:textStyle="bold"
               android:padding="5dp"
               android:textSize="40sp"
               />
           <Button
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/foual1"
               android:text="Foual+"
               android:onClick="freekick2"
               android:background="#DC4F08"
               android:padding="5dp"
               />
       </LinearLayout>

   </LinearLayout>

    <Button
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:background="#DC4F08"
        android:id="@+id/reset"
        android:layout_gravity="center_horizontal"
        android:onClick="reset"/>

</LinearLayout>


</ScrollView>